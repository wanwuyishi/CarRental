<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/button_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="3dp">


                <LinearLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/user_head_test" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/small_magin"
                        android:layout_marginRight="@dimen/small_magin"
                        android:minWidth="90dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/mini_padding">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/mini_magin"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/small_padding">

                                <TextView
                                    android:id="@+id/tv_shipper_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="用户名"
                                    android:textColor="@color/black_button"
                                    android:textSize="@dimen/text_normal" />

                                <RatingBar
                                    android:id="@+id/rb_shipper_star"
                                    style="@style/roomRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/small_magin"
                                    android:isIndicator="true"
                                    android:max="255"
                                    android:numStars="5"
                                    android:progress="200"
                                    android:stepSize="0.5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/mini_magin"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="历史成交："
                                    android:textSize="@dimen/text_normal" />

                                <TextView
                                    android:id="@+id/hist_orders"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123"
                                    android:textSize="@dimen/text_normal" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical">

                            <Button
                                android:id="@+id/user_phone"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="@dimen/big_magin"
                                android:background="@drawable/icon_phone"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:text=""
                                android:textSize="14dp"
                                android:textStyle="normal" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/include"
                    layout="@layout/layout_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_alignParentStart="true"
                    android:background="@color/divider_grey" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/view4"
                    android:background="@color/white"
                    android:padding="@dimen/big_padding">

                    <TextView
                        android:layout_width="@dimen/edit_width"
                        android:layout_height="wrap_content"
                        android:text="发布时间:"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_goods_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2016-07-12:13:21:32"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_alignParentStart="true"
                    android:background="@color/divider_grey" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"
                    android:padding="@dimen/big_padding">

                    <TextView
                        android:layout_width="@dimen/edit_width"
                        android:layout_height="wrap_content"
                        android:text="运单编号:"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_goods_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E1234567"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_alignParentStart="true"
                    android:background="@color/divider_grey" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:paddingTop="@dimen/big_padding">

                        <TextView
                            android:layout_width="@dimen/edit_width"
                            android:layout_height="wrap_content"
                            android:text="货物类型:"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_goods_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="类型"
                            android:textSize="@dimen/text_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:paddingTop="@dimen/big_padding">

                        <TextView
                            android:layout_width="@dimen/edit_width"
                            android:layout_height="wrap_content"
                            android:text="车辆需求:"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_car_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="高拦车"
                            android:textSize="@dimen/text_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:paddingTop="@dimen/big_padding">

                        <TextView
                            android:layout_width="@dimen/edit_width"
                            android:layout_height="wrap_content"
                            android:text="货物详情:"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_goods_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="名称+重量+体积"
                            android:textSize="@dimen/text_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:paddingTop="@dimen/big_padding">

                        <TextView
                            android:layout_width="@dimen/edit_width"
                            android:layout_height="wrap_content"
                            android:text="意向价格:"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100元/车"
                            android:textSize="@dimen/text_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/big_padding">

                        <TextView
                            android:layout_width="@dimen/edit_width"
                            android:layout_height="wrap_content"
                            android:text="备注信息:"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_goods_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="11吨"
                            android:textSize="@dimen/text_normal" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height"
                    android:layout_alignParentEnd="true"
                    android:background="@color/divider_grey" />


                <include layout="@layout/layout_list" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/scroll"
            android:background="@color/white"
            android:elevation="@dimen/elevation"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_quote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txt_quote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="4"
                    android:ems="10"
                    android:hint="请输入您的意向报价"
                    android:inputType="number|numberDecimal"
                    android:textSize="@dimen/text_normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent">

                    <Button
                        android:id="@+id/quote"
                        style="@style/Material_Action"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确认报价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_release_goods_re"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_release_goods_re"
                    style="@style/Material_Action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="今日重发"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_grey" />

                <Button
                    android:id="@+id/btn_cancel_goods"
                    style="@style/Material_Action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="取消货源"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_goods_transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_goods_transfer"
                    style="@style/Material_Action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="完成运输"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_goods_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_goods_finish"
                    style="@style/Material_Action"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="货已送达，完成订单！"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
