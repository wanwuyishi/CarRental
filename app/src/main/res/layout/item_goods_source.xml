<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingRight="@dimen/big_padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#C00D0E" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16"
            android:text="出发地"
            />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请选择出发地"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="@dimen/big_padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding_22"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#C00D0E" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16"
            android:text="目的地"
            />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请选择目的地"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#FCFCFC"
         android:padding="15dp" >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="3"
             android:text="所需车型" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:ems="10"
             android:hint="请选择车型" >
         </TextView>
     </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding_22"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16"
            android:text="所需车辆" />

        <TextView
            android:id="@+id/tv_select_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_16"
            android:hint="请选择所需车辆"
            ></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="货物分类"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <TextView
            android:id="@+id/tv_goods_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择货物分类"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#C00D0E" />

        <TextView
            android:layout_width="@dimen/edit_width_small"
            android:layout_height="wrap_content"
            android:text="货物名称"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/et_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColorHint="@color/description_color"
            android:textSize="@dimen/text_normal_16"
            android:hint="请输入货物名称"
            ></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/mid_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/edit_width_small"
                android:layout_height="wrap_content"
                android:text="货物重量"
                android:textColor="@color/black_button"
                android:textSize="@dimen/text_normal_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_goods_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入货物重量"
                android:singleLine="true"
                android:textSize="@dimen/text_normal_16"></EditText>

            <Spinner
                android:id="@+id/sp_goods_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|center_horizontal"
                android:paddingLeft="@dimen/mini_padding" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding_22"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/mid_padding">

        <TextView
            android:layout_width="@dimen/edit_width_small"
            android:layout_height="wrap_content"
            android:text="货物体积"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/et_goods_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入货物体积"
            android:singleLine="true"
            android:textSize="@dimen/text_normal_16"></EditText>

        <TextView
            android:id="@+id/sp_goods_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black_button"
            android:paddingLeft="@dimen/mid_padding"
            android:text="立方"
            android:textSize="@dimen/text_normal_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="@dimen/edit_width_small"
                android:layout_height="wrap_content"
                android:text="意向价格"
                android:textColor="@color/black_button"
                android:textSize="@dimen/text_normal_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入意向价格"
                android:singleLine="true"
                android:textSize="@dimen/text_normal_16"></EditText>

            <Spinner
                android:id="@+id/sp_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|center_horizontal"
                android:paddingLeft="@dimen/mini_padding" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/mid_padding">

        <TextView
            android:layout_width="@dimen/edit_width_small"
            android:layout_height="wrap_content"
            android:text="收货电话"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="11"
            android:hint="请输入收货电话"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/text_normal_16"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/big_padding"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/mid_padding">

        <TextView
            android:layout_width="@dimen/edit_width_small"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入备注"
            android:textSize="@dimen/text_normal_16"></EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />

</LinearLayout>