<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="货货货"
            app:titleTextColor="@color/black_button">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:elevation="1dp">

            <Button
                android:id="@+id/profile"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:drawableLeft="@drawable/user_head_test"
                android:gravity="left|center_vertical"
                android:text="    用户名"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="@dimen/elevation"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_myorder"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/icon_order_nor"
                android:gravity="left|center_vertical"
                android:padding="13dp"
                android:text="     我的订单"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginLeft="60dp"
                android:background="@color/divider_grey" />

            <Button
                android:id="@+id/btn_myfriend"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/icon_order_nor"
                android:gravity="left|center_vertical"
                android:padding="13dp"
                android:text="     我的好友"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginLeft="60dp"
                android:background="@color/divider_grey" />

            <Button
                android:id="@+id/my_feedback"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/icon_order_nor"
                android:gravity="left|center_vertical"
                android:padding="13dp"
                android:text="     我的评价"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:layout_marginLeft="60dp"
                android:background="@color/divider_grey" />

            <Button
                android:id="@+id/my_security"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/icon_order_nor"
                android:gravity="left|center_vertical"
                android:padding="13dp"
                android:text="     保险"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:elevation="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/setting"
                style="@style/Material_Action"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableLeft="@drawable/icon_order_nor"
                android:gravity="left|center_vertical"
                android:padding="13dp"
                android:text="     设置"
                android:textColor="@color/description_color"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>