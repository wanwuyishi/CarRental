<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        style="@style/per_ll"
        android:id="@+id/ll_imageView_head"
        >
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>
    <LinearLayout
        android:id="@+id/ll_nickname"
        style="@style/per_ll">
        <TextView
            style="@style/per_txtf"
            android:text="昵称"/>
        <TextView
            android:id="@+id/tv_nickname"
            style="@style/per_txtdetail"
            android:text="一车填满太平洋"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>
    <LinearLayout
        android:id="@+id/ll_code"
        style="@style/per_ll">
        <TextView
            style="@style/per_txtf"
            android:text="我的二维码"/>
        <TextView
            style="@style/per_txtdetail"
            android:text="未设置"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>

    <LinearLayout
        android:id="@+id/ll_phone"
        style="@style/per_ll">
        <TextView
            style="@style/per_txtf"
            android:text="手机号"/>
        <TextView
            android:id="@+id/tv_phone"
            style="@style/per_txtdetail"
            android:text="12345678990"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>
    <LinearLayout
        android:id="@+id/ll_adress"
        style="@style/per_ll">
        <TextView
            style="@style/per_txtf"
            android:text="我的地址"/>
        <TextView
            android:id="@+id/tv_address"
            style="@style/per_txtdetail"
            android:text="北京市 北京市 东城区"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>
    <LinearLayout
        android:id="@+id/ll_password"
        style="@style/per_ll">
        <TextView
            style="@style/per_txtf"
            android:text="密码设置"/>
        <TextView
            style="@style/per_txtdetail"
            android:text="点击修改"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>

    <RelativeLayout
        android:id="@+id/new_msg_setting"
        style="@style/per_ll">

        <TextView
            style="@style/per_txtf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新消息通知" />

        <CheckBox
            android:id="@+id/new_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_btn"
            android:button="@null"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/description_color"/>


    <RelativeLayout
        android:id="@+id/chat_setting"
        style="@style/per_ll">

        <TextView
            style="@style/per_txtf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否开启敏感词过滤"
             />

        <CheckBox
            android:id="@+id/msg_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_btn"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

</LinearLayout>
