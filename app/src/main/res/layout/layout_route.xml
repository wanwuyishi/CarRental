<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center|center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleStart"
            style="@style/Material_Card_Title"
            android:textAlignment="center"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal"
            tools:text="Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleStart"
            style="@style/Material_Card_Subtitle_3dp"
            android:textAlignment="center"
            tools:text="Subtitle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/mini_magin"
            android:layout_marginTop="@dimen/big_magin"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/good_survey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mini_padding"
            android:layout_marginBottom="@dimen/mini_magin"
            android:text="概要"
            android:textAlignment="center"
            android:textColor="#1f9efb"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:id="@+id/titleEnd"
            style="@style/Material_Card_Title"
            android:textAlignment="center"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal"
            tools:text="Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleEnd"
            style="@style/Material_Card_Subtitle_3dp"
            android:textAlignment="center"
            tools:text="Subtitle" />
    </LinearLayout>

</LinearLayout>