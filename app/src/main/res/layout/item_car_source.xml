<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="*" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="出发地"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <TextView
            android:id="@+id/tv_car_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择出发地"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding_22"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="*" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="到达地"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <TextView
            android:id="@+id/tv_car_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择到达地"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DADBDA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding_22"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="*" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="车辆类型"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择车辆类型"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding">

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="承运重量"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/tv_car_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入承运重量"
            android:singleLine="true"
            android:textColorHint="@color/description_color"
            android:textSize="@dimen/text_normal_16"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="吨" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/mid_padding"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/mid_padding">

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="承运体积"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/tv_car_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入承运体积"
            android:singleLine="true"
            android:textColorHint="@color/description_color"
            android:textSize="@dimen/text_normal_16"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="@dimen/small_padding"
            android:text="立方" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADBDA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="*" />

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="发车时间"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <TextView
            android:id="@+id/tv_car_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择发车时间"
            android:textSize="@dimen/text_normal_16"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/big_padding"
        android:paddingLeft="@dimen/big_padding_22"
        android:paddingRight="@dimen/big_padding"
        android:paddingTop="@dimen/big_padding">

        <TextView
            android:layout_width="@dimen/edit_width"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/black_button"
            android:textSize="@dimen/text_normal_16" />

        <EditText
            android:id="@+id/tv_car_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入备注"
            android:singleLine="true"
            android:textColorHint="@color/description_color"
            android:textSize="@dimen/text_normal_16"></EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADBDA" />

</LinearLayout>